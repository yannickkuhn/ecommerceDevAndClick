{% extends 'baseAdmin.html.twig' %}

{% block body -%}
    <h2>Voir la catégorie</h2>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ entity.name }}</td>
                </tr>
            </tbody>
        </table>

        <table>
            <tbody>
                <tr>
                    <td>
                        <a class="btn btn-info" href="{{ path('adminCategories') }}">
                            Retour à la liste
                        </a>  
                        <a class="btn btn-success" href="{{ path('adminCategories_edit', { 'id': entity.id }) }}">
                            éditer
                        </a>
                    </td>
                    <td class="deleteForm">{{ form(delete_form) }}</td>
                </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
