{% extends 'baseAdmin.html.twig' %}

{% block body -%}
    <h2>Voir la catégorie</h2>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ entity.name }}</td>
                </tr>
            </tbody>
        </table>

        <nav class="nav flex-column">
            <li>
                <a class="btn btn-link" href="{{ path('adminCategories') }}">
                    Retour à la liste
                </a>
            </li>
            <li>
                <a class="btn btn-link" href="{{ path('adminCategories_edit', { 'id': entity.id }) }}">
                    éditer
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </nav>
    </div>

    
{% endblock %}
