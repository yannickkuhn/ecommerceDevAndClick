{% extends 'baseAdmin.html.twig' %}

{% block body -%}
    <h1>Liste des catégories</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('adminCategories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('adminCategories_show', { 'id': entity.id }) }}"><i class="icon-book"></i> Voir</a>
                    <a class="btn btn-success" href="{{ path('adminCategories_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i> Editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('adminCategories_new') }}">
        Créer une nouvelle catégorie
    </a>
{% endblock %}
